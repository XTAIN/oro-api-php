{
  "name": "digitalprint/oro-api-php",
  "description": "OroCommerce API client for PHP applications.",
  "keywords": [
    "api",
    "api-client",
    "php",
    "Oro",
    "OroCommerce"
  ],
  "license": "BSD-2-Clause",
  "require": {
    "php": ">=8.1",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "composer/ca-bundle": "^1.2"
  },
  "require-dev": {
    "eloquent/liberator": "^2.0",
    "guzzlehttp/guzzle": "^6.3 || ^7.0",
    "phpunit/phpunit": "^5.7 || ^6.5 || ^7.1 || ^8.5 || ^9.5",
    "friendsofphp/php-cs-fixer": "^3.4"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Digitalprint\\Oro\\Api\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tests\\Digitalprint\\Oro\\Api\\": "tests/Digitalprint/Oro/API/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests",
    "format": "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
  }
}
